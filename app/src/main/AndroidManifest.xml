<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elson.viewdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".touch.TouchActivity" android:screenOrientation="portrait"/>
        <activity android:name=".touch.ScrollerActivity" android:screenOrientation="portrait"/>
        <activity android:name=".touch.ViewDragActivity" android:screenOrientation="portrait"/>
        <activity android:name=".touch.SlideActivity" android:screenOrientation="portrait"/>
        <activity android:name=".touch.DrawerActivity" android:screenOrientation="portrait"/>

        <activity android:name=".recyclerView.ItemDecorationActivity" android:screenOrientation="portrait"/>

        <activity android:name=".nestedScrolling.AppBarLayoutActivity" android:screenOrientation="portrait"/>
        <activity android:name=".nestedScrolling.SuspendedLayoutActivity" android:screenOrientation="portrait"/>
        <activity android:name=".nestedScrolling.StickyLayoutActivity" android:screenOrientation="portrait"/>
        <activity android:name=".nestedScrolling.RecyclerViewBottomBehaviorActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>